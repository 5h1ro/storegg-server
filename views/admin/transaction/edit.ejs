<%- include ../../partials/header.ejs %>

    <body class="hold-transition sidebar-mini layout-fixed">
        <div class="wrapper">

            <!-- Preloader -->
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__shake" src="/adminlte/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60"
                    width="60">
            </div>



            <%- include ../../partials/navbar.ejs %>
                <%- include ../../partials/sidebar.ejs %>
                    <!-- Content Wrapper. Contains page content -->
                    <div class="content-wrapper">
                        <!-- Content Header (Page header) -->
                        <section class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1>Jenis Pembayaran</h1>
                                    </div>
                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                                            <li class="breadcrumb-item"><a href="/payment">Jenis Pembayaran</a></li>
                                            <li class="breadcrumb-item active">Edit</li>
                                        </ol>
                                    </div>
                                </div>
                            </div><!-- /.container-fluid -->
                        </section>

                        <!-- Main content -->
                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card card-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">Form Edit Bank</h3>
                                            </div>
                                            <!-- /.card-header -->
                                            <!-- form start -->
                                            <form action="/payment/edit/<%= payment._id%>?_method=PUT" method="POST">
                                                <div class="card-body">

                                                    <div class="form-group">
                                                        <label for="type">Tipe Pembayaran</label>
                                                        <input type="text" name="type" value="<%= payment.type %>"
                                                            class="form-control" id="type"
                                                            placeholder="Masukkan Tipe Pembayaran" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Bank</label>
                                                        <div class="select2-purple">
                                                            <select class="form-control select2" multiple="multiple"
                                                                name="banks" style="width: 100%;">
                                                                <% bank.forEach(bank=>{ %>
                                                                    <option value="<%= bank._id %>" <%
                                                                        payment.banks.forEach(paymentBank=> { %>
                                                                        <% if(bank._id.toString()===paymentBank._id.toString()){
                                                                            %>
                                                                            selected
                                                                            <%}%>
                                                                                <%})%>>
                                                                                    <%=bank.name %> - <%= bank.nameBank
                                                                                            %>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- /.card-body -->

                                                <div class="card-footer">
                                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                                </div>
                                            </form>
                                        </div>
                                        <!-- /.card -->
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.container-fluid -->
                        </section>
                        <!-- /.content -->
                    </div>

                    <%- include ../../partials/footer.ejs %>
        </div>
        <!-- ./wrapper -->

        <%- include ../../partials/js.ejs %>